@model List<BildirimListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@if (Model.Count > 0)
{
    <div class="row mb-4">
        @foreach (var bildirim in Model)
        {

            <div class="col-md-6">
                <form method="post" asp-action="Index" class="my-1">
                    <div class="card bg-gradient-primary">
                        <!-- Card body -->
                        <div class="card-body">

                            <div class="row">
                                <div class="col">

                                    <p class="card-title text-uppercase text-muted mb-0 text-white ">
                                        <input type="hidden" name="id" value="@bildirim.Id" />
                                        @bildirim.Aciklama
                                        <button type="submit" class="btn btn-info btn-sm float-right">Okundu</button>
                                    </p>

                                </div>
                                <div class="col-auto">
                                    <div class="icon icon-shape bg-white text-dark rounded-circle shadow">
                                        <i class="far fa-comment"></i>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </form>
            </div>


        }
    </div>
